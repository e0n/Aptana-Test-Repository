            markedNode.fillBackground(markedNodeFillBackup);
            markedNode.hideAnchors();
            //markedNode.shape.setFill(markedNodeFillBackup);
            markedNode = node;
            markedNodeFillBackup = markedNode.getBackground();//markedNode.shape.getFill();
